{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "api/*": ["api/*"],
      "assets/*": ["assets/*"],
      "lib/*": ["lib/*"],
      "gpt/*": ["gpt/*"],
      "navigation/*": ["navigation/*"],
      "screens/*": ["screens/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "locales/*": ["locales/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
